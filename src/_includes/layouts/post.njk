{% extends "layouts/default.njk" %}
{% block templateClass %}tmpl-post{% endblock %}
{% block bodyClass %}tmpl-post{% endblock %}
{% block afterhead %}<link href="/assets/build/post.css?v=fd53ed6dd79c6f6f53d1" rel="stylesheet">{% endblock %}
{% block content %}
<div class="post">
  <h1>{{ title }}</h1>
  <div class="post__time">
    <time datetime="{{date | htmlDateString }}">{{ date | readableDate}}</time>
  </div>

  <div class="post__tags">
    {% set tags = tags %}
    {% include "components/tags.njk" %}
  </div>

  {{ content | safe }}
</div>
<div class="post__emotions"></div>
<div class="post__readmore">
  <h3 class="post__readmore-title">Вам может быть интересно</h3>
  {% set postslist = collections.posts | relatedPosts(page.url, tags, 3) %}
  {% include "components/posts.njk" %}
</div>
<div class="post-layer__up">
  <div class="post-layer__back">
    <i class="arrow arrow_type_up"></i>
    <i class="arrow arrow_type_down"></i>
  </div>
</div>
{% endblock %}
{% block afterbody %}
<script async src="https://platform.twitter.com/widgets.js" charset="utf-8"></script>
<script src="/assets/highlight.js"></script>
<script src="/assets/build/vendors~main~post.entry.js?v=2e2320ccda8e3aae5940"></script><script src="/assets/build/vendors~post.entry.js?v=5b229fe6ca2cc35f2973"></script><script src="/assets/build/post.entry.js?v=14b7b205dc44d467a09d"></script>
{% endblock %}
